/**
 *  File processed via ```gulp whitelabel-json```
 *  Values containing a $ are interpolated by gulp
 *
 *  merges src/_config/_default/colors.json + src/_config/{whitelabel}/colors.json ->
 *    src/_config/_autogenerated/Colors.json
 *    src/_config/_autogenerated/Colors.js
 *    src/_config/_autogenerated/Colors.scss
 */
{
  "$black":            "#000000", // comments are permitted here
  "$orchid":           "#77C7A8",
  "$red":              "#dc6d6d",
  "$blue-dark-gray":   "#223F59",
  "$blue-dark-ulgy":   "#46698F",
  "$blue-dark-sky":    "#59a8d9",
  "$blue-dark-input":  "#24394F",
  "$blue-gray":        "#a0c2de",
  "$blue-light":       "#6198c9",
  "$silver-dark":      "#b9bfc2",
  "$silver-light":     "#d0d6d9",
  "$white-impure":     "#fbfbfb",
  "$white-subtle":     "#fefefe",
  "$white":            "#ffffff",
  "$gray-placeholder": "$silver-dark",
  "$gray-button":      "#acb0b2",
  "$gray-text":        "#666868",
  "$gray-heading":     "$gray-text",
  "$gray-border":      "#f5f6f7",
  "$gray-background":  "#F8F8F8",
  "$blue":             "$blue-light",
  "$green":            "$orchid",
  "$brand":            "$orchid",

  "$background-table-odd":   "$white-impure",
  "$background-table-even":  "$white-impure",

  "$linear-gradient-gray-blue":         "linear-gradient(to left, $white-subtle       0%, $silver-light     70%,  $silver-light   100%)",
  "$linear-gradient-blue-gray":         "linear-gradient(to left,  $gray-background   0%, $blue-light      70%,  $blue-dark-gray 100%)",
  "$linear-gradient-gray-blue-border":  "linear-gradient(to right, $gray-border       0%, $blue-light     100%)",
  "$linear-gradient-blue-to-dark-blue": "linear-gradient(to right, $blue-light        0%, $blue-dark-gray 100%)",
  "$linear-gradient-silver-white":      "linear-gradient(to right, $silver-light      0%, $white          100%)",
  "$linear-gradient-white-blue-white":  "linear-gradient(to right, $white             0%, $blue-dark-ulgy  50%,  $white 100%)",
  "$linear-gradient-white-subtle":      "linear-gradient(to right, $white             0%, $white-subtle   100%)",

  "$font-family-serif":  "'Lato', 'Helvetica Neue', Arial, sans-serif",
  "$font-family-base":   "$font-family-serif",

  "$element": {
    "h1": {
      "color": "$blue-dark-ulgy"
    },
    "h2": {
      "color": "$blue-dark-gray"
    },
    "h3": {
      "color": "$gray-heading"
    },
    "h4": {
      "color": "$gray-heading"
    },
    "a": {
      "color": "$blue-light",
      "font-weight": 300
    },
    "button": {
      "background-color": "$blue-light",
      "color":            "$white",
      "color-hover":      "$blue-light",
      "background-color-hover": "$white"
    },
    "button-inverted": {
      "color":            "$blue-light",
      "color-hover":      "$blue-dark-gray"
    },
    "header": {
      "background": "$blue-dark-gray",
      "color":      "$white",
      "padding":    "30px"
    }
  },

 "$whitelabel": {
    "menu": {
      "font-weight": 500,
      "color":       "$white",
      "color-hover": "$silver-dark",
      "a": {
      "color": "$silver-light"
      }
    },
    "logout": {
	  "color": "$blue-light"
	},
    "notifications": {
      "icon-count": {
        "background": "$orchid"
      }
    },
    "selectbox": {
      "color": "$gray-text"
    },
    "full-screen-footer-wrapper": {
      "background-color": "$blue-dark-gray",
      "color":            "$white"
    },
    "google-map-legend": {
      "background-color": "$blue-dark-gray"
    },
    "add-to-watchlist-panel": {
      "background-color": "$blue-dark-gray",
      "color":            "$white",
      "font-weight":       500
    },
    "selectbox-watchlist": {
	  "background-color": "$white",
      "color":            "$blue-dark-ulgy"
    },
    "breadcrumbs-header": {
      "background-color": "none",
      "border-bottom":    "1px solid $silver-light"
    },
    "login":{
	  "input": {
	    "border": "$blue-dark-input",
	    "background-color": "$blue-dark-input",
	    "color": "$white"
	  },
	  "btn": {
	    "border": "$blue-light",
	    "background-color": "$blue-light",
	    "color": "$white"
	  },
	  "a": {
	    "color": "$blue-light"
	  }  
    }
  },

  "namedInvestorColors": {
    "consultants":                "#6dbff2",
    "family_offices":             "#f7c1c1",
    "foundations_and_endowments": "#c59fc9",
    "funds_of_funds":             "#93dcad",
    "high_net_worth_individuals": "#eab96d",
    "internal":                   "#c1e0f7",
    "managed_account_platforms":  "#ecf997",
    "pension_funds":              "#97f9f9",
    "seeders_and_accelerators":   "#f997a8",
    "sovereign_wealth":           "#67767d"
  },
  "groupsScatterPlotColors": {
    "title":   "#686a74",
    "tickers": "$gray-text",
    "legends": "#51515b",
    "grid":    "$gray-background",

    "points": {
      "active":   "$orchid",
      "inactive": "$blue-light",
      "hover":    "$gray-text"
    }
  },
  "groupsLineGraphColors": {
    "tickers": "$groupsScatterPlotColors.tickers",
    "legends": "$groupsScatterPlotColors.legends",
    "grid":    "$white-impure",

    "lines": {
      "active":   "$groupsScatterPlotColors.points.active",
      "inactive": "$blue-dark-gray",
      "hover":    "$groupsScatterPlotColors.points.hover",

      "benchmark":  "#c4e2f5",
      "quartiles":  "#e5e5e5",
      "median":     "#bcceda"
    }
  },
  "scatterPlot": {
    "tickers": "$groupsScatterPlotColors.tickers",
    "legends": "$groupsScatterPlotColors.legends",
    "grid":    "$gray-background",

    "tooltip": {
      "background": "$blue-dark-gray",
      "text":       "$white"
    },
    "funds": {
      "invalid": "$silver-light",
      "hovered": "$blue-dark-gray"
    },

    "gradients": {
      "standard":    [ "$blue-light", "#008605" ],
      "clientOwned": [ "$brand",  "$brand"  ]
    }
  },
  "distributionGraph": {
    "light": "$gray-background",
    "dark":  "$blue-light"
  },
  "densityGraph": {
    "gradient": "#6dbff2"
  }
}
