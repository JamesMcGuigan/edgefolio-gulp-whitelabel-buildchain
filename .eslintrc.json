{
  "documentation": {
    "eslint": "http://eslint.org/docs/user-guide/configuring#adding-shared-settings",
    "lodash": "https://www.npmjs.com/package/eslint-plugin-lodash"
  },
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "jquery": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "script",
    "impliedStrict": true,
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "plugins": [
    "lodash"
  ],
  "settings": {
    "lodash": {
      "version": 3
    }
  },
  "rules": {
    "no-mixed-spaces-and-tabs": 1,
    "no-extra-semi": 1,

    "no-cond-assign": 0,
    "no-console": 0,
    "no-empty": 0,
    "no-extra-boolean-cast": 0,
    "no-redeclare": 0,
    "no-unexpected-multiline": 0,
    "no-unreachable": 0,
    "no-unused-vars": 0,
    "semi": 0,

    "lodash/callback-binding": 2,
    "lodash/collection-return": 2,
    "lodash/no-double-unwrap": 2,
    "lodash/no-extra-args": 2,
    "lodash/unwrap": 2,

    "lodash/chain-style": [1, "as-needed"],
    "lodash/matches-prop-shorthand": [1, "always"],
    "lodash/matches-shorthand": [1, "always", 3],
    "lodash/no-commit": 1,
    "lodash/prefer-chain": [1, 3],
    "lodash/prefer-compact": 1,
    "lodash/prefer-filter": [1, 3],
    "lodash/prefer-get": [1, 3],
    "lodash/prefer-invoke-map": 1,
    "lodash/prefer-is-nil": 1,
    "lodash/prefer-lodash-chain": 1,
    "lodash/prefer-map": 1,
    "lodash/prefer-matches": [1, 3],
    "lodash/prefer-over-quantifier": 1,
    "lodash/prefer-reject": [1, 3],
    "lodash/prefer-startswith": 1,
    "lodash/prefer-thru": 1,
    "lodash/prefer-times": 1,
    "lodash/prefer-wrapper-method": 1,
    "lodash/prop-shorthand": 1,

    "lodash/prefer-lodash-typecheck": 0,
    "lodash/path-style": [1, "as-needed"],
    "lodash/prefer-constant": 0,
    "lodash/no-single-chain": 0,
    "lodash/prefer-lodash-method": 0,
    "lodash/prefer-noop": 0,
    "lodash/preferred-alias": 0
  },
  "globals": {
    "$"           : false,
    "_"           : false,
    "__insp"      : false,
    "angular"     : false,
    "Clipboard"   : false,
    "d3"          : false,
    "DeepDiff"    : false,
    "GulpConfig"  : false,
    "InfoBubble"  : false,
    "jQuery"      : false,
    "JS"          : false,
    "Modernizr"   : false,
    "moment"      : false,
    "navigator"   : false,
    "readJSON"    : false,
    "ss"          : false,
    "Whitelabel"  : false,
    "Blob"        : false,

    "describe"    : false,
    "it"          : false,
    "context"     : false,
    "expect"      : false,
    "beforeEach"  : false,
    "afterEach"   : false,
    "module"      : false,
    "inject"      : false
  }
}
